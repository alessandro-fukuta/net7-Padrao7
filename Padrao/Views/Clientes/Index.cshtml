@model IPagedList<Oficina7.Models.Cliente>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc;
<link href="~/css/crud.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Clientes";
}
<br/>
<h3>Clientes</h3>
<!-- model IEnumerable<Oficina7.Models.Cliente> -->

<form>
    <div class="row g-3">
            <div class="col-md-1">
                    <a asp-action="Create" class="btn btn-primary btn-sm">Cadastrar</a>
            </div>
            <div class="col-md-8">
                @using (Html.BeginForm("Index", "Clientes", FormMethod.Get))
                {
                    <p>
                        Nome: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                        <input type="submit" value="Pesquisa" />
                    </p>
                }
            </div>
    </div>

</form>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>

                @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Cidade
            </th>
            <th>
                @Html.ActionLink("Telefone", "Index", new { sortOrder = ViewBag.TelSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Celular
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.celular)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-success btn-sm">Mostrar</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger btn-sm">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

