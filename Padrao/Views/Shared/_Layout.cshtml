<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Publica.Sistema_Nome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Oficina7.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/icones.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>



</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color: #F4A460;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">@Publica.Sistema_Nome - @Publica.Sistema_Versao </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @{
                    if (Publica.Logado) // so mostra MENU PRINCIPAL se estiver LOGADO
                    {
                        <partial name="_MenuPrincipal" />
                    }
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse text-warning">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black">
        <div class="container text-warning" style="text-align:center">
            &copy; 2023 - Padrão 7 - por Fukuta
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
  
    <script src="~/lib/jQuery-Mask-Plugin-master/dist/jquery.mask.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
