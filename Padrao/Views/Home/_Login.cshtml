@model Usuario;
<div class="container">
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<br/>
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>@ViewBag.Mensagem</h3>
				<div class="d-flex justify-content-end social_icon">
					<!--
					<span><i class="glyphicon glyphicon-play"></i></span>
					<span><i class="glyphicon glyphicon-plus"></i></span>
					<span><i class="glyphicon glyphicon-minus"></i></span>-->
				</div>
			</div>
			<div class="card-body">
				<form asp-action="Logar" method="post">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
						</div>
						<input type="text" class="form-control" asp-for="NomeUsuario" autofocus placeholder="usuário">
					</div>
					<br />

					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="glyphicon glyphicon-eye-close"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="senha">
					</div>

					<br />
					<div class="row align-items-center remember">
						<input type="checkbox">Lembre-me
					</div>
					<br />

					<div class="form-group">
						<input type="submit" value="Login" class="btn float-right login_btn">
					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Não tem uma conta ?<a asp-action="_Registrar" asp-controller="Home">Registre-se</a>
				</div>
				<div class="d-flex justify-content-center">
					<a asp-action="RecuperarAcesso" asp-controller="Home" style="color: gray">Esqueceu sua senha?</a>
				</div>
			</div>
		</div>
	</div>
</div>
