@model Usuario;
<div class="container">
    <br />
    <br />
    <br />
    <br />
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>@ViewBag.Mensagem</h3>
                <div class="d-flex justify-content-end social_icon">
                    <!--
                    <span><i class="glyphicon glyphicon-play"></i></span>
                    <span><i class="glyphicon glyphicon-plus"></i></span>
                    <span><i class="glyphicon glyphicon-minus"></i></span>-->
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Logar" method="post">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                        </div>
                        <input type="text" class="form-control" name="pUsuario" value="@Publica.Login_Usuario" asp-for="NomeUsuario" autofocus placeholder="usuário">
                    </div>
                    <br />

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="glyphicon glyphicon-eye-close"></i></span>
                        </div>
                        <input type="password" class="form-control" name="pSenha" placeholder="senha">
                    </div>
                    <br />

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="text-danger bg-dark">@Publica.Mensagem1</span>

                        </div>
                    </div>


                    <br />
                  
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn float-right login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="text-white">
                    Não tem uma conta ?
                </div>
                <div class="d-flex justify-content-center links">
                    <a asp-action="_Registrar" asp-controller="Home" class="btn btn-outline-primary text-white">Registre-se</a>
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <a asp-action="RecuperarAcesso" asp-controller="Home" style="color: gray">Esqueceu sua senha?</a>
                </div>
            </div>
        </div>
    </div>
</div>

