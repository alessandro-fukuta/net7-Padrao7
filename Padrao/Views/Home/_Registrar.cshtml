@model Padrao.Models.Usuario;
<link rel="stylesheet" href="~/css/registrar.css" />



<div class="container">
    <br />
    <br />
    <br />

    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Registre-se</h3>
                <div class="d-flex justify-content-end social_icon">
                    <!--
                    <span><i class="glyphicon glyphicon-play"></i></span>
                    <span><i class="glyphicon glyphicon-plus"></i></span>
                    <span><i class="glyphicon glyphicon-minus"></i></span>-->
                </div>
            </div>

            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <label class="text-white" for="lblNome">Nome Completo</label>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                            </div>
                            <input type="text" asp-for="NomeCompleto" class="form-control"  autofocus placeholder="entre com seu nome">
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-user"></i></span>
                                </div>
                                <input type="text" asp-for="NomeUsuario" class="form-control" autofocus placeholder="usuario">
                                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-envelope"></i></span>
                                </div>
                                <input type="text" asp-for="Email" class="form-control"  autofocus placeholder="email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-phone"></i></span>
                                </div>
                                <input type="text" asp-for="Celular" class="form-control" placeholder="Telefone">
                                <span asp-validation-for="Celular" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-asterisk"></i></span>
                                </div>
                                <input type="password" asp-for="Senha" class="form-control" placeholder="senha">
                                <div class="text-warning">
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="glyphicon glyphicon-asterisk"></i></span>
                                </div>
                                <input type="password" asp-for="ConfirmeSenha" class="form-control" placeholder="repete senha"><br />
                                <span asp-validation-for="ConfirmeSenha" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Registrar" class="btn float-right login_btn">
                    </div>
                </form>
            </div>
        </div>
    </div>



</div>
